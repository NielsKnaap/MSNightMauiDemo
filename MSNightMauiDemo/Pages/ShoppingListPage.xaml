<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:observables="clr-namespace:MSNightMauiDemo.Observables"
             xmlns:viewModels="clr-namespace:MSNightMauiDemo.ViewModels"
             x:Class="MSNightMauiDemo.ShoppingListPage"
             x:DataType="viewModels:ShoppingListViewModel">
    <ContentPage.Content>
        <VerticalStackLayout>
            <ListView x:Name="TodoListView" Margin="0,0,0,20" ItemsSource="{Binding  ShoppingList}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="observables:Item">
                        <ViewCell>
                            <Grid Padding="10" BackgroundColor="#EEEEEE" Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Name}" FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding Count}" FontSize="18" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Entry Placeholder="Add item" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>